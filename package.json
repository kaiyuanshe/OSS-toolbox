    "lodash": "^4.17.21",
    "markdown-ime": "^1.0.3",
    "marked": "^15.0.12",
    "mobx": "^6.13.7",
    "mobx-github": "^0.3.11",
    "mobx-i18n": "^0.7.1",
    "mobx-react": "^9.2.0",
    "mobx-react-helper": "^0.4.1",
    "mobx-restful": "^2.1.0",
    "mobx-restful-table": "^2.4.0",
    "next": "^15.3.2",
    "next-pwa": "~5.6.0",
    "next-ssr-middleware": "^1.0.0",
